<% if @confirm.errors.any? %>
  <div id="error_explanation">
    <h2>Cant confirm student:</h2>
    <ul>
      <% @confirm.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= "Confirm form for #{@event.name}"%>
<%= form_for [@event, @confirm] do |a| %>
    <%= a.label :Student %>
    <%= a.collection_select :user_id, @students, :id, :username, include_blank: true %><br>
    <%= render 'form', a: a%>
<%end%>
<%= link_to "Go Back", event_path(@event) %>
