<div>
<h3><%= "#{@participant.name}" %></h3><br>
<%= "Team #{@participant.team_number}" %><br>
</div>

<div>
    <h3> Scouting Data </h3>
    <%="Autonomous - #{@participant.autonomous}"%><br>
    <%="Score? - #{scout(@participant.scoring)}" %><br>
    <%="Climb? - #{scout(@participant.climbing)}" %><br>
    <%= "Robot Complete? - #{scout(@participant.robot_status)}"%>
</div>

<%= form_tag event_participant_url(@participant), method: "delete" do %>
    <%= submit_tag "Delete" %>
  <% end %>
<%= link_to "Go back", event_url(@event) %>
